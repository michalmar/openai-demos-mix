  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Current File - Python",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Streamlit App Debug",
      "type": "debugpy",
      "request": "launch",
      "program": "~/miniconda3/envs/azureopenai-100-py310/bin/streamlit",
      "args": ["run", "home.py"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/app"
    }
  ]
}
